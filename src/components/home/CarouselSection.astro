---
// Carousel section for the homepage
---

<section class="py-16 bg-gray-50 lg:py-16">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-4">
    <!-- Title -->
    <h1 class="text-3xl sm:text-4xl lg:text-5xl font-impact text-gray-900 mb-12 uppercase max-w-4xl leading-tight">
      Si vous aimez les sports de raquette, <span class="text-[#008AEF]">vous trouverez tout ici.</span>
    </h1>

    <!-- Carousel Container -->
    <div class="carousel-container relative">
      <div class="carousel-fade relative w-full">
        <!-- Slides -->
        <div class="carousel-slide-fade" data-slide="0" style="display: none;">
          <div class="flex flex-col ">
            <!-- Left: Images bento -->
            <div class="flex-1">
              <div class="grid grid-cols-3 gap-4 mb-8">
                <div class="bg-gray-200 rounded-lg overflow-hidden h-32 sm:h-40 lg:h-60 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-1.png" alt="Padel 1" class="w-full h-full object-cover object-center" />
                </div>
                <div class="bg-gray-200 rounded-lg overflow-hidden h-32 sm:h-40 lg:h-60 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-1.png" alt="Padel 2" class="w-full h-full object-cover object-center" />
                </div>
                <div class="bg-gray-200 rounded-lg overflow-hidden h-32 sm:h-40 lg:h-60 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-1.png" alt="Padel 3" class="w-full h-full object-cover object-center" />
                </div>
                <div class="col-span-2 bg-gray-200 rounded-lg overflow-hidden h-40 sm:h-60 lg:h-80 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-2.png" alt="Padel 4" class="w-full h-full object-cover object-center" />
                </div>
                <div class="bg-gray-200 rounded-lg overflow-hidden h-40 sm:h-60 lg:h-80 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-3.png" alt="Padel 5" class="w-full h-full object-cover object-center" />
                </div>
              </div>
            </div>
            <!-- Right: Caption + Arrows -->
            <div class="flex-1 flex flex-col justify-center">
              <div class="flex flex-row items-center justify-between gap-4 h-full w-full">
                <!-- Caption -->
                <div class="bg-white rounded-lg p-6 shadow-sm border-l-4 border-[#12EF97] max-w-md w-full fade-caption" style="opacity:0;">
                  <h3 class="text-xl font-impact text-gray-900 mb-2">Courts Intérieurs</h3>
                  <p class="text-gray-600 font-raleway">5 terrains praticables</p>
                </div>
                <!-- Arrows (toujours visibles, jamais animées) -->
                <div class="flex flex-row items-center justify-center gap-4">
                  <button 
                    class="carousel-prev w-12 h-12 bg-[#12EF97] hover:bg-[#10d085] rounded-full flex items-center justify-center text-white transition-colors duration-300"
                    aria-label="Précédent"
                    style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                  </button>
                  <button 
                    class="carousel-next w-12 h-12 bg-[#12EF97] hover:bg-[#10d085] rounded-full flex items-center justify-center text-white transition-colors duration-300"
                    aria-label="Suivant"
                    style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="carousel-slide-fade" data-slide="1" style="display: none;">
          <div class="flex flex-col">
            <!-- Left: Images bento -->
            <div class="flex-1">
              <div class="grid grid-cols-3 gap-4 mb-8">
                <div class="bg-gray-300 rounded-lg overflow-hidden h-32 sm:h-40 lg:h-60 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-1.png" alt="Padel 6" class="w-full h-full object-cover object-center" />
                </div>
                <div class="bg-gray-300 rounded-lg overflow-hidden h-32 sm:h-40 lg:h-60 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-1.png" alt="Padel 7" class="w-full h-full object-cover object-center" />
                </div>
                <div class="bg-gray-300 rounded-lg overflow-hidden h-32 sm:h-40 lg:h-60 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-1.png" alt="Padel 8" class="w-full h-full object-cover object-center" />
                </div>
                <div class="col-span-2 bg-gray-300 rounded-lg overflow-hidden h-40 sm:h-60 lg:h-80 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-2.png" alt="Padel 9" class="w-full h-full object-cover object-center" />
                </div>
                <div class="bg-gray-300 rounded-lg overflow-hidden h-40 sm:h-60 lg:h-80 fade-img" style="opacity:0;">
                  <img src="/public/thumbnails/slider/thumb-3.png" alt="Padel 10" class="w-full h-full object-cover object-center" />
                </div>
              </div>
            </div>
            <!-- Right: Caption + Arrows -->
            <div class="flex-1 flex flex-col justify-center">
              <div class="flex flex-row items-center justify-between gap-4 h-full w-full">
                <!-- Caption -->
                <div class="bg-white rounded-lg p-6 shadow-sm border-l-4 border-[#008AEF] max-w-md w-full fade-caption" style="opacity:0;">
                  <h3 class="text-xl font-impact text-gray-900 mb-2">Courts Extérieurs</h3>
                  <p class="text-gray-600 font-raleway">5 terrains praticables</p>
                </div>
                <!-- Arrows (toujours visibles, jamais animées) -->
                <div class="flex flex-row items-center justify-center gap-4">
                  <button 
                    class="carousel-prev w-12 h-12 bg-[#12EF97] hover:bg-[#10d085] rounded-full flex items-center justify-center text-white transition-colors duration-300"
                    aria-label="Précédent"
                    style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                    </svg>
                  </button>
                  <button 
                    class="carousel-next w-12 h-12 bg-[#12EF97] hover:bg-[#10d085] rounded-full flex items-center justify-center text-white transition-colors duration-300"
                    aria-label="Suivant"
                    style="box-shadow: 0 2px 8px rgba(0,0,0,0.08);"
                  >
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  // Fade-in carousel functionality
  document.addEventListener('DOMContentLoaded', function() {
    const slides = document.querySelectorAll('.carousel-slide-fade');
    const prevBtns = document.querySelectorAll('.carousel-prev');
    const nextBtns = document.querySelectorAll('.carousel-next');
    let currentSlide = 0;
    const totalSlides = slides.length;

    function showSlide(index: number) {
      slides.forEach((slide, i) => {
        (slide as HTMLElement).style.display = i === index ? 'block' : 'none';
      });
      // Fade-in staggered
      const fadeImgs = slides[index].querySelectorAll('.fade-img');
      fadeImgs.forEach((img, i) => {
        (img as HTMLElement).style.opacity = '0';
        setTimeout(() => { (img as HTMLElement).style.transition = 'opacity 0.6s'; (img as HTMLElement).style.opacity = '1'; }, 200 + i * 120);
      });
      const fadeCaption = slides[index].querySelector('.fade-caption') as HTMLElement | null;
      if (fadeCaption) {
        fadeCaption.style.opacity = '0';
        setTimeout(() => { fadeCaption.style.transition = 'opacity 0.6s'; fadeCaption.style.opacity = '1'; }, 900);
      }
    }

    function nextSlide() {
      currentSlide = (currentSlide + 1) % totalSlides;
      showSlide(currentSlide);
    }
    function prevSlide() {
      currentSlide = (currentSlide - 1 + totalSlides) % totalSlides;
      showSlide(currentSlide);
    }
    nextBtns.forEach(btn => btn.addEventListener('click', nextSlide));
    prevBtns.forEach(btn => btn.addEventListener('click', prevSlide));
    // Init
    showSlide(currentSlide);
  });
</script>

<style>
  .fade-img, .fade-caption {
    opacity: 0;
  }
</style> 