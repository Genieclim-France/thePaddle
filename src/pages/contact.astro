---
// Page de contact The Padel
import ContactHeader from '../components/contact/ContactHeader.astro';
import ContactHoursCard from '../components/contact/ContactHoursCard.astro';
import ContactMapCard from '../components/contact/ContactMapCard.astro';
import ContactForm from '../components/contact/ContactForm.astro';
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
---

<Layout title="Contact - The Padel">
  <main class="relative min-h-screen bg-blue flex items-start justify-center pb-12 lg:pt-40 overflow-hidden">
    {/* SVG d√©coratif en fond */}
    <img
      src="/src/assets/bg-terrain.svg"
      alt=""
      class="md:hidden absolute left-0 top-0 h-full w-full z-0 pointer-events-none select-none"
      aria-hidden="true"
    />
    <img
      src="/src/assets/bg-terrain-desktop-xxl.svg"
      alt=""
      class="hidden md:absolute md:block top-0 left-5 h-full w-full 2xl:w-[3000px] 2xl:h-[2000px] z-0 pointer-events-none select-none"
      aria-hidden="true"
    />
    <div class="w-full max-w-7xl flex flex-col md:flex-row gap-8 md:gap-16 px-2 md:px-8 z-10">
      <!-- Colonne gauche -->
      <div class="flex flex-col gap-8 md:w-1/2 max-w-md">
        <ContactHeader />
        <ContactHoursCard />
        <ContactMapCard />
      </div>
      <!-- Colonne droite -->
      <div class=" flex-1 flex items-start justify-center">
        <ContactForm />
      </div>
    </div>
  </main>
</Layout>